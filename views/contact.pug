extends base.pug

block style 
    style
      include ../static/style.css
      include ../static/contactstyle.css
    //-   include ../static/swiper-bundle.min.css
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    

block content
    header#header 
        .navbar 
            .nav
                li #[a(href='/') Home]
                li #[a(href='/about') About]
                
                li #[a(href='/contact') Contact]
            
        .logo 
            img(src="/static/img/logoi.png")
            li #[a(href='/') NK School] 
        .icon 
            a <i class='bx bx-moon change-theme' id='theme-button'></i>
            a <i class='bx bx-menu' id='menu-icon'></i>
    section.contact 
        .ltr-head 
            h1 Contact Us
        form(action="/contact", method="post") 
            .form-g
                label(for="") Name 
                input(type="text", name="name")
            .form-g
                label(for="") Address 
                input(type="text", name="address")
            .form-g
                label(for="") Email 
                input(type="email", name="email")
            .form-g 
                label(for="") Message 
                textarea(name="message", cols="50", rows="10") 
            .btn2  
                button(type="submit") Submit


    a(href="#" class="scrollup" id="scroll-up") 
        <i class='bx bx-chevron-up'></i>



        
    block scripts 
        script(src="/static/index.js")